<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ai.ftech.travelluxury">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TravelLuxury"
        tools:targetApi="31">
        <activity
            android:name=".ui.hotellist.HotelListActivity"
            android:exported="false" />
        <activity
            android:name=".ui.selectroom.SelectRoomActivity"
            android:exported="true" />
        <activity
            android:name=".ui.hoteldetail.reviews.SeeReviewsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.hoteldetail.facilities.SeeFacilitiesActivity"
            android:exported="false" />
        <activity
            android:name=".ui.hoteldetail.policies.SeePoliciesActivity"
            android:exported="false" />
        <activity
            android:name=".ui.hoteldetail.description.SeeDescriptionActivity"
            android:exported="false" />
        <activity
            android:name=".ui.hoteldetail.HotelDetailActivity"
            android:exported="true" />
        <activity
            android:name=".ui.search.SearchActivity"
            android:exported="false" />
        <activity
            android:name=".ui.notification.NotificationActivity"
            android:exported="false" />
        <activity
            android:name=".ui.message.MessageActivity"
            android:exported="false" />
        <activity
            android:name=".ui.register.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true" />
    </application>

</manifest>
