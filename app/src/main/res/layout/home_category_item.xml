<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvHomeCategoryImage"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="12dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardCornerRadius="40dp">

        <ImageView
            android:id="@+id/ivHomeCategoryImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#30C5F7"
            android:contentDescription="@string/flight_icon"
            android:padding="5dp"
            android:src="@drawable/flight_icon_white" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginVertical="16dp"
        android:layout_toEndOf="@id/cvHomeCategoryImage"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvHomeCategoryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A diverse selection of flights"
            android:textColor="#434343"
            android:textSize="17sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvHomeCategoryDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Easily choose to fly anywhere!"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</RelativeLayout>
