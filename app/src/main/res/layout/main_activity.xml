<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.MainActivity">

    <RelativeLayout
        android:id="@+id/abvMessageActionBar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:background="@color/main_blue_color">

        <RelativeLayout
            android:id="@+id/rlMainSearchBox"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginVertical="8dp"
            android:layout_marginStart="15dp"
            android:layout_toStartOf="@id/ivMainNotification"
            android:background="@drawable/main_search_shape">

            <ImageView
                android:id="@+id/ivMainSearch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/search_icon"
                android:padding="5dp"
                android:src="@drawable/search_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/ivMainSearch"
                android:text="@string/search_for_items_destinations" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/ivMainNotification"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_toStartOf="@id/ivMainMessage"
            android:contentDescription="@string/notification_icon"
            android:padding="15dp"
            android:src="@drawable/notification2_icon" />

        <ImageView
            android:id="@+id/ivMainMessage"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/message_icon"
            android:padding="15dp"
            android:src="@drawable/message_icon" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/flMainContent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/bnvMainNavigator"
        android:layout_below="@+id/abvMessageActionBar" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnvMainNavigator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:menu="@menu/bottom_navigation_menu" />

</RelativeLayout>
