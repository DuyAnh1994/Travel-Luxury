<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="8dp">


    <RelativeLayout
        android:id="@+id/rlMyAccountFeatureItemContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivMyAccountFeatureIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/calendar_icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_toStartOf="@id/ivMyAccountFeatureGoRight"
            android:layout_toEndOf="@id/ivMyAccountFeatureIcon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMyAccountFeatureTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:textColor="#434343"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMyAccountFeatureDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/holding_place_text" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivMyAccountFeatureGoRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_go_right" />

    </RelativeLayout>


</RelativeLayout>